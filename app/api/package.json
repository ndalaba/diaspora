{
  "name": "api",
  "version": "0.0.1",
  "scripts": {
    "build": "npx tsc ",
    "dev": "nodemon index.ts",
    "test:watch": "jest --watch",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs -d './build/config/ormconfig.js'",
    "migration:generate": "pnpm run build && pnpm run typeorm migration:generate ./migrations/migration_table  ",
    "migration:run": "pnpm run build && pnpm run typeorm migration:run",
    "migration:revert": "pnpm run build && pnpm run typeorm migration:revert"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "fastify": "^5.6.1",
    "fastify-cors": "^6.0.3",
    "fastify-helmet": "^7.0.1",
    "fastify-jwt": "^4.1.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "sqlite3": "^5.1.7"
  }
}
